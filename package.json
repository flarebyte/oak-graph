{
  "version": "0.1.0",
  "description": "Management of graphs and networks in oak format in Typescript",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "TSDX-README.md",
    "yarn.lock",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:cov": "tsdx test --coverage",
    "lint": "tsdx lint",
    "fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "np"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test",
      "prepublishOnly": "yarn size"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "oak-graph",
  "author": "Olivier Huin",
  "module": "dist/oak-graph.esm.js",
  "size-limit": [
    {
      "path": "dist/oak-graph.cjs.production.min.js",
      "limit": "3 KB"
    },
    {
      "path": "dist/oak-graph.esm.js",
      "limit": "3 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "husky": "^4.3.6",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  }
}
